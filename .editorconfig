# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Tab indentation for JS Files
[src/**.js]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Matches the exact files either package.json or bower.json, etc.
[{package.json,bower.json,.jshintrc}]
indent_style = space
indent_size = 2